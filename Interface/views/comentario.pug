extends layout

block content
    .w3-card-4
        header.w3-container.w3-red
            h1= title
        .w3-container
            form.w3-container(action='/posts/comentario/'+id, method='post', enctype='multipart/form-data')
                fieldset
                    legend Metadados
                    label Autor
                    input(type="text" id="autor" name="autor" required)
                    label Conteudo
                    textarea(id="conteudo" name="conteudo" required)
                button.w3-btn.w3-green.w3-mb-2(type='submit') Upload
        footer.w3-container.w3-red
            address Grupo NPM Starters