extends layout

block content
  .w3-card-4
        header.w3-container.w3-red
            h1= title
        .w3-container

            each item in lista
                .w3-card-4.w3-dark-grey

                    .w3-container.w3-center
                        h3=item.descricao
    
                        h5 Likes: #{item.likes}
                        h5 Data de Registo: #{item.dataRegisto}
                        a.w3-button.w3-light-grey(href="/posts/"+item._id) Read More

        footer.w3-container.w3-red
            address Gerado por Pedro Carneiro
            a(href="/") Voltar 