extends layout

block content
    // Fundo e navbar
    include componentes/navbar
    div.um-fundo
    
     // Header
    .w3-card-4
        header.w3-container.w3-white.header-flex
            h1.header-title.regular Gerir posts
            img.header-logo(src="/imagens/umLogo.png" alt="Uminho logo")

    

    .w3-container
        each item in lista
            .w3-card-4.w3-dark-grey
  
                .w3-container.w3-center
                    h3=item.descricao
      
                    h5 Likes: #{item.likes}
                    h5 Data de Registo: #{item.dataRegisto}
                    a.w3-button.w3-light-grey(href="/posts/"+item._id) Read More
  
    // Footer
    include componentes/rodape